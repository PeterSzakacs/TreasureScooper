        <ht id="x0y384" x="0" y="384" width="32" />
        <ht id="x0y128" x="0" y="128" width="32" />
    </htunnels>
    <interconnections>
        <ic x="768" from="x0y1408" to="x0y1152" />
        <ic x="2688" from="x0y1408" to="x0y1152" />
        <ic x="1280" from="x0y1152" to="x0y896" />
