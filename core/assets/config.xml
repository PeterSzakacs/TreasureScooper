<?xml version="1.0" encoding="UTF-8" ?>

<!--
    == XML configuration file for the entire game ==

    @elm <level>: One level of the game. Levels are played in sequential order
                  from top to bottom.
        @attributes gameType: a string describing the type of the game level
                              and which features it incorporates (are there
                              enemies, walls, both, ... ?)
                              See @GameType enum and @TreasureScooperBuilder
                              class to see how the change of this attribute
                              changes the game level.
        @attributes world: the path (relative to the current directory)
                           of the game world configuration file.

    @elm <actor>: The name (or rather type) of a singular actor in the game.
                  All arena described here have specific sprites representing
                  them on the screen and a unique @ActorType enum.
        @attributes name: a string describing this arena actor type (unique).
                          See @ActorType enum.
        @attributes left:
                    right:
                    up:
                    down: Boolean true/false specifying, whether there are specific sprites
                          to represent this actor when oriented in the specified direction.
-->

<config
        player-package="szakacs.kpi.fei.tuke.player"
        updater-package="szakacs.kpi.fei.tuke.arena.game.updaters"
        actor-package="szakacs.kpi.fei.tuke.arena.actors" >
    <players>
        <player id="A" class="PlayerA"/>
        <player id="B" class="PlayerB"/>
        <player id="C" class="PlayerC"/>
    </players>
    <updaters>
        <updater id="Walls" class="GameUpdaterWalls" />
        <updater id="Enemies" class="GameUpdaterEnemies" />
    </updaters>
    <levels>
        <level world="worlds/world1multiplayer.xml">
            <player id="A" entrance="left" />
            <player id="B" entrance="center" />
            <player id="C" entrance="right" />
        </level>
        <level world="worlds/world2.xml">
            <updater id="Walls" />
            <player id="A" entrance="left" />
        </level>
        <level world="worlds/world3multiplayer.xml">
            <updater id="Enemies" />
            <player id="A" entrance="center" />
            <player id="C" entrance="left" />
        </level>
        <level world="worlds/world1.xml">
            <updater id="Enemies" />
            <player id="A" entrance="center" />
        </level>
        <level world="worlds/world2multiplayer.xml">
            <updater id="Enemies" />
            <updater id="Walls" />
            <player id="A" entrance="left" />
            <player id="B" entrance="right" />
        </level>
        <level world="worlds/world3.xml">
            <updater id="Enemies" />
            <updater id="Walls" />
            <player id="A" entrance="center" />
        </level>
    </levels>
    <actors>
        <actor class="Mole" left="true" right="true" up="false" down="false" />
        <actor class="Bullet" left="true" right="true" up="true" down="true" />
        <actor class="Wall" left="true" right="false" up="false" down="false" />
    </actors>
</config>